<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/show_cloud_search_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/android_title_bg" >

        <ImageView
            style="@style/PersonalIconStyle"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/back_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:text="@string/personal_search"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>
    <!--<TextView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="80dp"-->
        <!--android:layout_marginTop="70dp"-->
        <!--android:text="词云展示"/>-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="词云展示"
        android:textColor="@color/goldyellow"
        android:textSize="30sp" />
    <TextView
        android:layout_width="fill_parent"
        android:paddingTop="120dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/red"
        android:layout_gravity="center_horizontal"
        android:text="暂无用户参与记录"
        android:layout_height="450dp" />
    <ImageView
        android:id="@+id/word_cloud_img"
        android:layout_width="fill_parent"
        android:paddingTop="120dp"
        android:layout_height="450dp"
        android:src="@mipmap/ic_launcher"/>
</RelativeLayout>
