<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/join_search_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/android_title_bg" >

        <ImageView
            style="@style/PersonalIconStyle"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/back_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:text="@string/personal_search"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="感谢您参与该调查"
            android:textColor="@color/goldyellow"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/search_item_key1"
            android:textColor="@color/red"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="110dp"
            android:padding="0dp"
            android:textSize="20dp"
            android:text="关键词1"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
             />
        <CheckBox
            android:id="@+id/search_item_key2"
            android:textColor="@color/red"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="160dp"
            android:textSize="20dp"
            android:text="关键词2"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <CheckBox
            android:id="@+id/search_item_key3"
            android:textColor="@color/red"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="210dp"
            android:padding="0dp"
            android:textSize="20dp"
            android:text="关键词1"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="270dp"
        >

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="其他"
        android:textSize="25dp"
        android:textColor="@color/red"
        android:gravity="center"
         />

        <EditText
            android:id="@+id/search_item_key_more"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginLeft="100dp"
            android:inputType="text"
            android:hint="@string/join_search_key4"
            android:text=""
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_search_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/android_title_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="420dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_margin="10dp"
        android:layout_marginTop="400dp"
        android:text="@string/submitsearch_tip"
        android:textSize="12sp"
        android:textColor="#9b7e33" />
    </RelativeLayout>
</RelativeLayout>
