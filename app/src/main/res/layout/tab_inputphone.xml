<?xml version="1.0" encoding="utf-8"?>
<!--输入手机号页面：fragment 包含页面：layout_top.xml-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:text="@string/registerinfo"
        android:textColor="@color/goldyellow"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_selection_gridview_bg" >

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="请输入你的手机号"
            android:inputType="number"
            android:background="@null"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_inputphone_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_btn_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="20dp"
        android:layout_margin="10dp"
        android:text="@string/register_tip"
        android:textSize="12sp"
        android:textColor="#9b7e33" />
    <TextView
        android:id="@+id/tv_reset_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_btn_bg"
        android:gravity="center"
        android:text="回到登录页面"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
