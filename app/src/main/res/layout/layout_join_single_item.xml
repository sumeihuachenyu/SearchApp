<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/single_item_my_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/android_title_bg" >

        <ImageView
            android:id="@+id/back_update"
            style="@style/PersonalIconStyle"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/back_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:text="@string/personal_search"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="调查主题"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/Join_search_item_theme"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="调查主题？" />

            </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="发布人"
                    android:textSize="20dp"
                    android:textColor="@color/black" />

                <!--android:background="@drawable/category_selection_gridview_bg"-->

                <TextView
                    android:id="@+id/Join_search_item_person"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:inputType="text"
                    android:text="华晨宇"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    />
            </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="发布时间"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Join_search_item_time"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="20dp"
                android:inputType="text"
                android:text="2019-03-27"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="类型"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Join_search_item_type"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="20dp"
                android:inputType="text"
                android:text="生活"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="备注"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Join_search_item_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="这是生活"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="关键词1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/join_key1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="这是生活"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="关键词2"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/join_key2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="这是生活"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="关键词3"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/join_key3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="这是生活"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

            <Button
                android:id="@+id/btn_join_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/android_title_bg"
                android:gravity="center"
                android:text="参与记录"
                android:textColor="#fff"
                android:textSize="20sp" />
        <Button
            android:id="@+id/btn_show_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/android_title_bg"
            android:gravity="center"
            android:text="词云展示"
            android:textColor="#fff"
            android:textSize="20sp" />
        </LinearLayout>
</LinearLayout>
